{
  "include": ["packages", "types"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "target": "es2020",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  }
}
